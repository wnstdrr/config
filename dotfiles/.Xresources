! Personal custom config for .Xresources
*.background: #282828
*.foreground: #ebdbb2

! Black + DarkGrey
*.color0:  #282828
*.color8:  #7c6f64

! DarkRed + Red
*.color1:  #fb4934
*.color9:  #cc241d

! DarkGreen + Green
*.color2:  #98971a
*.color10: #b8bb26

! DarkYellow + Yellow
*.color3:  #d79921
*.color11: #fabd2f

! DarkBlue + Blue
*.color4:  #458588
*.color12: #83a598

! DarkMagenta + Magenta
*.color5:  #b16286
*.color13: #d3869b

! DarkCyan + Cyan
*.color6:  #689d6a
*.color14: #8ec07c

! LightGrey + White
*.color7:  #a89984
*.color15: #ebdbb2

! Set title of new window
URxvt*title: thnkpad

! Set transparency & background shading
URxvt*depth: 32
URxvt*background: rgba:0000/0000/0000/cccc
URxvt*shading: 1 

! Remove scrollbar
URxvt*scrollBar: false

! Enable mouse scrolling plugin
! Disabled due to breaking Ctrl-c, Ctrl-v keybinds
! URxvt.perl-ext-common:vtwheel

! Change workspace font & size + margin padding
URxvt*font: xft:Hasklug Nerd Font Mono:style=Italic:size=10
URxvt*internalBorder: 10

! Underline URL & follow
URxvt.URlLauncher:/usr/bin/firefox
URxvt.underlineURLs:true

! Key Bindings

! Copy/Paste, same keys as gnome-terminal
! Disable ISO 14755 unicode input so we can use Ctrl-Shift bindings
URxvt*iso14755:        false
URxvt*iso14755_52:     false

! Disable Ctrl-Alt-c & Ctrl-Alt-v bindings (optional)
URxvt.keysym.C-M-c:    builtin-string:
URxvt.keysym.C-M-v:    builtin-string:

! Bind Ctrl-Shift-c & Ctrl-Shift-v to copy and paste
! I dont know why, but I needed to use hex keysym values to get it to work
URxvt.keysym.C-S-0x43: eval:selection_to_clipboard
URxvt.keysym.C-S-0x56: eval:paste_clipboard

! Set vim binds for hot switching tabs
URxvt.keysym.S-Page_Up : captURed by terminal for scrolling
URxvt.keysym.S-Page_Down : captURed by terminal for scrolling

URxvt.keysym.Home: \033[H
URxvt.keysym.End:  \033[F

! match vte/xterm
URxvt.keysym.Control-Up:    \034[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

! clear the scrollback
URxvt.keysym.Control-l: command:\033c
